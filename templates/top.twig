{% extends 'layout.twig' %}
{% set title = '日本全国地価' %}
{% set price_target = '全国' %}
{% set price_target = '全国' %}
{% block title %}{{ title }}{% endblock %}
{% block price_target %}{{ price_target }}{% endblock %}
{% block price_station %}{{ price_target }}{% endblock %}
{% block category %}
    <div class="row">
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-move-up blue darken-1 waves-effect waves-block waves-light">
                    <div class="move-up">
                        <p class="margin white-text">地価公示・都道府県上位ランキング</p>
                    </div>
                    <table class="bordered white-text">
                        <thead>
                        <th data-field="id">順位</th>
                        <th data-field="rate">都道府県</th>
                        <th data-field="name">地価平均</th>
                        <th data-field="name">坪単価平均</th>
                        </thead>
                        <tbody>
                        {% for postedPref  in  postTopPref %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ postedPref.address }}</td>
                                <td>{{ postedPref.price }}円/㎡</td>
                                <td>{{ postedPref.priceOfTubo }}円/坪</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-move-up blue darken-1 waves-effect waves-block waves-light">
                    <div class="move-up">
                        <p class="margin white-text">地価公示・都道府県下位ランキング</p>
                    </div>
                    <table class="bordered white-text">
                        <thead>
                            <th data-field="id">順位</th>
                            <th data-field="rate">都道府県</th>
                            <th data-field="name">地価平均</th>
                            <th data-field="name">坪単価平均</th>
                        </thead>
                        <tbody>
                        {% for postedPref  in  postLowPref %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ postedPref.address }}</td>
                                <td>{{ postedPref.price }}円/㎡</td>
                                <td>{{ postedPref.priceOfTubo }}円/坪</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-move-up deep-purple darken-4 waves-effect waves-block waves-light">
                    <div class="move-up">
                        <p class="margin white-text">地価調査・都道府県上位ランキング</p>
                    </div>
                    <table class="bordered white-text">
                        <thead>
                        <th data-field="id">順位</th>
