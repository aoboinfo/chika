{% endblock %}
{% block rateArea %}
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content purple darken-3">
                    <span class="chart-title white-text">対前年変動率(%)</span>
                    <div class="trending-line-chart-wrapper">
                        <canvas id="price_change_rate" height="95"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
